<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="ml-5">配送先編集</h4>
      <%= form_with model: @address do |f| %>
      <table class="table table-borderless">
        <tr>
          <th class="col-3"><%= f.label "郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th class="col-3"><%= f.label "住所" %></th>
          <td colspan="2"><%= f.text_field :address, class:"col-12" %></td>
        </tr>
        <tr>
          <th class="col-3"><%= f.label "宛名" %></th>
          <td><%= f.text_field :name %></td>
          <td></td>
          <td><%= f.submit "変更内容を保存", method: :patch, class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>