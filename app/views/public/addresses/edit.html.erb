<div>
  <div>
    <div>
      <h2>配送先</h2>
      <%= form_with model: @address do |f| %>
      <table>
        <tr>
          <th><%= f.label "郵便番号(ハイフンなし)" %></th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "住所" %></th>
          <td><%= f.text_field :address %></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "宛名" %></th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "変更内容を保存", method: :patch %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>