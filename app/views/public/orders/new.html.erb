<div>
  <div>
    <div>
      <h3>注文情報入力</h3>
      <%= form_with model: @order do |f| %>
        <%= f.label "支払い方法" %>
        <ul>
          <li><%= f.radio_button :payment_way, Order.payment_ways.key(0) %>
              <%= f.label :payment_way_credit_card, Order.payment_ways_i18n[:credit_card]  %></li>
          <li><%= f.radio_button :payment_way, Order.payment_ways.key(1) %>
              <%= f.label :payment_way_transfer, Order.payment_ways_i18n[:transfer] %></li>
        </ul>

        <%= f.label "お届け先" %>
       <ul>
          <li>
            <%= f.radio_button :address_id, 'current_customer.customer_address_display' %>
            <%= f.label "ご自身の住所" %>
            <%= current_customer.customer_address_display %>
          </li>

          <li>
            <%= f.radio_button :address, ':id, :address_display' %>
            <%= f.label "登録済住所から選択" %>
            <%= f.select :address, options_from_collection_for_select(Address.all, :id, :address_display) %>
          </li>

          <%= f.radio_button :address, ':post_code, :address, :name' %>
          <%= f.label "新しいお届け先" %>
          <li><table>
            <tr>
              <th>郵便番号(ハイフンなし)</th>
              <td>
                <%= f.text_field :post_code %>
              </td>
            </tr>
            <tr>
              <th>住所</th>
              <td>
                <%= f.text_field :address %>
              </td>
            </tr>
            <tr>
              <th>宛名</th>
              <td>
                <%= f.text_field :name %>
              </td>
            </tr>
          </table></li>
        </ul>
        <%= f.submit "確認画面へ進む" %>
      <% end %>
    </div>
  </div>
</div>