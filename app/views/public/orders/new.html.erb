<div>
  <div>
    <div>
      <h3>注文情報入力</h3>
      <%= form_with model: @order do |f| %>
        <%= f.label "支払い方法" %>
        <%= f.radio_button :payment_way, Order.payment_ways.key(0) %>
        <%= f.label :payment_way_credit_card, Order.payment_ways_i18n[:credit_card]  %>
        
        <%= f.radio_button :payment_way, Order.payment_ways.key(1) %>
        <%= f.label :payment_way_transfer, Order.payment_ways_i18n[:transfer] %>
        
        <%= f.label "お届け先" %>
        <%= f.radio_button %>
        
        <%= f.label "ご自身の住所" %>
        <%= @customer.address %>
        
        <%= f.label "登録済住所から選択" %>
        <%= f.select :address, options_from_collection_for_select(current_customer.address, :address, :name) %>
        
        <%= f.label "新しいお届け先" %>
        <table>
          <tr>
            <th>郵便番号(ハイフンなし)</th>
            <td>
              <%= f.text_field :post_code %>
            </td>
          </tr>
          <tr>
            <th>住所</th>
            <td>
              <%= f.text_field :address %>
            </td>
          </tr>
          <tr>
            <th>宛名</th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>
        </table>
        <%= f.submit "確認画面へ進む" 
    </div>
  </div>
</div>