<div>
  <div>
    <div>
      <h3>注文履歴一覧</h3>
      <table>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払い金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>

        <tr>
        <% @orders.each do |order| %>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td>
            <%= order.post_code %></br>
            <%= order.address %></br>
            <%= order.name %>
          </td>
          <% @total = 0 %>
          <td >
          <% order.order_details.each do |order_detail| %>
            <p><%= order_detail.item.name %></p>
            <% @total += order_detail.price %>
          <% end %>
          </td>
          <td><%= @total + @postage %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id) %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>