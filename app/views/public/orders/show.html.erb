<div>
  <div>
    <div>
      <h3>注文履歴詳細</h3>
      
      <table>
      <p>注文情報</p>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= "〒" + @order.post_code %></br>
          <%= @order.address %></br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_way_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status_i18n %></td>
      </tr>
      </table>
      <table>
        <p>請求情報</p>
        <% @total = 0 %>
          <% @order.order_details.each do |order_detail| %>
          <% @total += order_detail.subtotal %>
        <% end %>
        <tr>
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @postage %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @total + @postage %></td>
        </tr>
      </table>
      <table>
        <p>注文内容</p>
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td>
              <%= order_detail.item.name %>
            </td>
            <td><%= order_detail.item.with_tax_price %></td>
              <td>
                <%= order_detail.amount %>
              </td>
            <% @subtotal = 0 %>
            <td><%= order_detail.subtotal %></td>
            <% @subtotal += order_detail.subtotal %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>