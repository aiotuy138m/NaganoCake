<div>
  <div>
    <div>
      <h2>注文情報確認</h2>
      <table>
        <thead>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>
        <tbody>

          <tr>
          <% @cart_items.each do |cart_item| %>
            <tr>
            <td>
              <%= image_tag cart_item.item.get_image(50, 50) %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            </tr>
          <% end %>
          <tr>
            <th>送料</th>
            <td><%= @order.postage %></td>
          </tr>
          <tr>
            <% @total = 0 %>
            <% @cart_items.each do |cart_item| %>
              <% @total += cart_item.subtotal %>
            <% end %>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>請求額合計</th>
            <td><%= @total + @order.postage %></td>
          </tr>
        </tbody>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_way_i18n %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td>
            <%= @order.post_code %>
            <%= @order.address %>
            <%= @order.name %>
          </td>
        </tr>
      </table>
      <%= form_with model: Order.new do |f| %>
        <%= f.hidden_field :customer_id, :value => @order.customer_id %>
        <%= f.hidden_field :post_code, :value => @order.post_code %>
        <%= f.hidden_field :address, :value => @order.address %>
        <%= f.hidden_field :name, :value => @order.name %>
        <%= f.hidden_field :payment_way, :value => @order.payment_way %>
        <%= f.submit "注文を確定する" %>
      <% end %>
    </div>
  </div>
</div>
