<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="ml-5 mb-5">新規会員登録</h4>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="">
    <tr class="field">
      <th><%= f.label "名前" %></th>
      <td>
        <%= f.label "(姓)" %>
      </td>
      <td>
        <%= f.text_field :last_name, autofocus: true %>
      </td>
      <td>
        <%= f.label "(名)" %>
      </td>
      <td>
        <%= f.text_field :first_name, autofocus: true %>
      </td>
    </tr>
    <tr class="field">
      <th><%= f.label "フリガナ" %></th>
      <td>
        <%= f.label "(セイ)" %>
      </td>
      <td>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </td>
      <td>
        <%= f.label "(メイ)" %>
      </td>
      <td>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </td>
    </tr>
    <tr class="field">
      <th><%= f.label "メールアドレス" %></th>
      <td></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr class="field">
      <th><%= f.label "郵便番号(ハイフンなし)" %></th>
      <td></td>
      <td><%= f.text_field :postal_code, autofocus: true %></td>
      <td></td>
      <td></td>
    </tr>
    <tr class="field">
      <th><%= f.label "住所" %></th>
      <td></td>
      <td colspan="3"><%= f.text_field :address, autofocus: true, class:"col-12" %></td>
    </tr>
    <tr class="field">
      <th><%= f.label "電話番号(ハイフンなし)" %></th>
      <td></td>
      <td><%= f.text_field :telephone_number, autofocus: true %></td>
      <td></td>
      <td></td>
    </tr>
    <tr class="field">
       <th>
        <% if @minimum_password_length %>
          <p>パスワード(<%= @minimum_password_length %> 文字以上)</p>
        <% end %>
      </th>
      <td></td>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      <td></td>
      <td></td>
    </tr>

    <tr class="field">
      <th><%= f.label "パスワード(確認用)" %></th>
      <td></td>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr class="actions">
      <th></th>
      <td></td>
      <td><%= f.submit "新規登録", class:"btn btn-success btn-block" %></td>
      <td></td>
      <td></td>
    </tr>
  </table>

<% end %>

      <div class="ml-4 mt-4">
        <h4>既に登録済みの方</h4>
        <p class="ml-3">
          <%= link_to "こちら", customer_session_path, class:"border-bottom border-primary" %> 　からログインしてください
        </p>
      </div>
    </div>
  </div>
</div>
