<div>
  <div>
    <div>
      <h3><%= @customer.last_name+@customer.first_name %>さんの会員情報</h3>
      <table>
        <tr class="show">
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr class="show">
          <th>氏名</th>
          <td>
            <%= @customer.last_name %>
            <%= @customer.first_name %>
          </td>
        </tr>
        <tr class="show">
          <th>フリガナ</th>
          <td>
            <%= @customer.last_name_kana %>
            <%= @customer.first_name_kana %>
          </td>
        </tr>
        <tr class="show">
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr class="show">
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr class="show">
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr class="show">
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr class="show">
          <th>会員ステータス</th>
          <td>
            <%= @customer.is_deleted ? "退会" : "有効" %>
          </td>
        </tr>
        <tr class="actions">
          <th></th>
          <td><%= link_to "編集する", edit_admin_customer_path %></td>
          <td><%= link_to "注文履歴一覧を見る", admin_root_path %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
