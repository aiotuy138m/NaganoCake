
<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8">
      <h4 class="ml-3 mb-5">会員一覧</h4>
      <table class="ml-5 table table-borderless col-12">
        <tr>
          <th class="col-1">会員ID</th>
          <th class="col-2">氏名</th>
          <th class="col-2">メールアドレス</th>
          <th class="col-3">ステータス</th>
        </tr>
      <% @customers.each do |customers| %>
        <tr>
          <td><%= customers.id %></td>
          <td>
            <%= link_to admin_customer_path(customers.id), class:"border-bottom", :style=>"color:black;" do %>
              <%= customers.last_name+customers.first_name %>
            <% end %>
          </td>
          <td><%= customers.email %></td>
          <td class="<%= "text-success" if customers.is_deleted == "undeleted" %><%= "text-muted" if customers.is_deleted == "deleted" %>"><%= customers.is_deleted_i18n %></td>
        </tr>
      <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>
