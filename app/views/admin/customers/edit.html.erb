<div class="container">
  <div class="row">
    <div class="col-8">
      <h4 class="ml-5 mb-5"><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h4>
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <table class="table table-borderless table-sm" >
        <tr>
          <th><%= f.label "会員ID" %></th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th><%= f.label "氏名" %></th>
          <td>
            <%= f.text_field :last_name %>
            <%= f.text_field :first_name, class:"ml-4" %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "フリガナ" %></th>
          <td>
            <%= f.text_field :last_name_kana %>
            <%= f.text_field :first_name_kana, class:"ml-4" %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "郵便番号" %></th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "住所" %></th>
          <td colspan="3"><%= f.text_field :address, class:"col-12" %></td>
        </tr>
        <tr>
          <th><%= f.label "電話番号" %></th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "メールアドレス" %></th>
          <td><%= f.text_field :email %></td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th><%= f.label "会員ステータス" %></th>
          <td>
            <%= f.radio_button :is_deleted, "undeleted", style: "accent-color:black;" %>
            <%= f.label :is_deleted, "有効", value: false %>
            <%= f.radio_button :is_deleted, "deleted" , style: "accent-color:black;" %>
            <%= f.label :is_deleted, "退会", value: true %>
          </td>
          <td></td>
          <td></td>
        </tr>
        <tr>
          <th></th>
          <td><%= f.submit "変更を保存", url: admin_customers_path, method: :patch, class:"btn btn-success" %></td>
          <td></td>
          <td></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
