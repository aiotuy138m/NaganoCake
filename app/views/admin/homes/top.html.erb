<div class="container">
  <div class="row">
    <div class="col">
      <div class="col-8"></div>
      <h4 class="ml-5 mb-5">注文履歴一覧</h4>
      <table class="table table-borderless col-8">
        <tr>
          <th class="col-4">購入日時</th>
          <th class="col-3">購入者</th>
          <th class="col-2">注文個数</th>
          <th class="col-2">注文</th>
        </tr>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order.id), class:"border-bottom", :style=>"color:black;" do %>
              <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            <% end %>
          </td>
          <td><%= order.customer.last_name + order.customer.first_name %></td>
          <td>
            <%= order.order_details.sum(:amount) %>
          </td>
          <td><%= order.status_i18n %></td>
        </tr>
      <% end %>
      <%= paginate @orders %>
      </table>
    </div>
  </div>
</div>
