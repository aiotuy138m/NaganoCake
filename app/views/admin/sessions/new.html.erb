<div class="container" >
  <div class="row">
    <div class="col">
      <h4 class="ml-4 mb-4">管理者ログイン</h4>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <table class="ml-5 table table-borderless col-10">
          <tr class="field">
            <th class="col-2"><%= f.label "メールアドレス" %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-10" %></td>
          </tr>
          <tr class="field">
            <th class="col-2"><%= f.label "パスワード" %></th>
            <td><%= f.password_field :password, autocomplete: "current-password", class:"col-10" %></td>
          </tr>
          <tr class="actions">
            <th></th>
            <td><%= f.submit "ログイン", class:"btn btn-primary col-3" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
