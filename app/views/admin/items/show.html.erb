<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="ml-5 mb-5">商品詳細</h4>
      <div class="d-flex">
        <div><%= image_tag @item.get_image(200, 300) %></div>
        <table class="ml-5 table table-borderless table-sm">
          <tr>
            <td class="col-2">商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td class="col-2">商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td class="col-2">ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td class="col-2">税込価格<br/>(税抜価格)</td>
            <td style="line-height:50px;"><%= (@item.price*1.1).round.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
          <tr>
            <td class="col-2">販売ステータス</td>
            <td class="<%= "text-success" if @item.is_active == "sale" %><%= "text-muted" if @item.is_active == "stop_selling" %>">
              <h5><%= @item.is_active_i18n %></h5>
            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="container text-center">
  <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success btn-lg col-2" %>
</div>