<div>
  <div>
    <div>
      <h3>商品編集</h3>
      <%= form_with model: @item, url: admin_item_path do |f| %>
      <table>
          <tr>
            <th><%= f.label "商品画像" %></th>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <th><%= f.label "商品名" %></th>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <th><%= f.label "商品説明" %></th>
            <td><%= f.text_area :introduction %></td>
          </tr>
          <tr>
            <th><%= f.label "ジャンル" %></th>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
          </tr>
          <tr>
            <th><%= f.label "税抜価格" %></th>
            <td><%= f.text_field :price %>円</td>
          </tr>
          <tr>
            <th><%= f.label "販売ステータス" %></th>
            <td>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中", value: true %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "販売停止中", value: false %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "変更を保存", url: admin_items_path, method: :patch %></td>
          </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>