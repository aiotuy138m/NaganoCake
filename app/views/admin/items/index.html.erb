<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="ml-5">商品一覧</h4>
      <%= link_to "＋", new_admin_item_path, class:"font-weight-bold btn btn-outline-secondary rounded-circle shadow p-0", style: "width:2rem;height:2rem;" %>
      <table class="table table-borderless">
        <tr>
          <th class="col-1">商品ID</th>
          <th class="col-3">商品名</th>
          <th class="col-1">税抜価格</th>
          <th class="col-3">ジャンル</th>
          <th class="col-1">ステータス</th>
        </tr>
      <% @items.each do |items| %>
        <tr>
          <td><%= items.id %></td>
          <td>
            <%= link_to admin_item_path(items.id), class:"link link-dark" do %>
              <%= items.name %>
            <% end %>
          </td>
          <td><%= items.price %></td>
          <td><%= items.genre.name %></td>
          <td class="<%= "text-success" if items.is_active == "sale" %>"><%= items.is_active_i18n %></td>
        </tr>
      <% end %>
      </table>
      <%= paginate @items %>
    </div>
  </div>
</div>
