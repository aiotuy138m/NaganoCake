<h4 class="ml-5 mb-5">ジャンル一覧・追加</h4>
<div class="container float-left">
  <div class="row">
    <div class="col-8">
      <%= form_with model: @genre, url: admin_genres_path do |f| %>
  <table class="mb-5">
    <tr>
      <th><%= f.label "ジャンル名", class:"mr-5" %></th>
      <td><%= f.text_field :name, class:"col-12" %></td>
      <td><%= f.submit "新規登録", class:"btn btn-success ml-5" %></td>
    </tr>
  </table>
<% end %>
    </div>
  </div>
</div>

<table class="table mt-5">
  <tr>
    <th class="pl-5">ジャンル</th>
    <th></th>
  </tr>
  <% @genres.each do |genres| %>
    <tr>
      <td class="col-2"><%= genres.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genres.id), class:"btn btn-success" %></td>
    </tr>
  <% end %>
</table>
